<%- include('components/head') %>
<%- include('components/navbar') %>

<div class="container text-center my-5">
    <h1>Agenda</h1>
    <p>Seus contatos est√£o abaixo</p>

    <div class="alert alert-danger">
        Error
    </div><!-- alert -->

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Telefone</th>
                    <th scope="col">Email</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <% for (contact of contacts) { %>
                    <tr>
                        <td><%= contact.name %></td>
                        <td><%= contact.phone %></td>
                        <td><%= contact.email %></td>
                        <td><a href="/contato/<%= contact._id %>/editar" class="text-info">Editar</a></td>
                        <td><a href="/contato/<%= contact._id %>/destroy" class="text-danger">Excluir</a></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div><!--table-responsive-->
</div><!-- container -->

